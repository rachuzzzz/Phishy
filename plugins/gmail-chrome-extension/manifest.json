{
  "manifest_version": 3,
  "name": "Phishy AI - Email Security Assistant",
  "version": "1.0.0",
  "description": "AI-powered email security for Gmail. Flag suspicious emails instantly.",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  
  "host_permissions": [
    "https://mail.google.com/*",
    "https://*.ngrok.io/*",
    "https://*.ngrok-free.app/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["phishy-gmail.js"],
      "css": ["phishy-styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phishy AI Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["phishy-injected.js"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}