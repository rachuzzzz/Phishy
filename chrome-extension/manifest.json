{
  "manifest_version": 3,
  "name": "Phishy - Gmail Phishing Detector",
  "version": "1.0",
  "description": "Detects phishing emails in Gmail using XGBoost ML model",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://*.ngrok.io/*",
    "https://*.ngrok-free.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phishy Settings"
  },
  "background": {
    "service_worker": "background.js"
  }
}